@{
  Layout = "_Layout";
}

@using Library.Models;
@model List<Library.Models.Author>;

<h1>Authors</h1><hr>

@if (@Model.Count == 0)
{
  <p>No Authors have been added yet!</p>
} 

@foreach (Author author in Model)
{
  <p class="list-details">@Html.ActionLink($"{author.AuthorName}", "Details", new { id = author.AuthorId })</p>
}
<br><br>
<p>@Html.ActionLink("Add a Author", "Create", null, null, new { @class = "btn btn-outline-dark"})</p>

<p>@Html.ActionLink("Home", "Index", "Home", null, new { @class="btn btn-outline-dark"})</p>