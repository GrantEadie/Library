@{
  Layout = "_Layout";
}

@using Library.Models;
@model List<Library.Models.Copy>;

<h1>Copies</h1>

@if (@Model.Count == 0)
{
  <h3>No Copies have been added yet!</h3>
} 

@foreach (Copy copy in Model)
{
  <li>@Html.ActionLink($"{copy.CopyName}", "Details", new { id = copy.CopyId })</li>
}

<p>@Html.ActionLink("Add a new copy", "Create", null, null, new { @class = "btn btn-success btn-sm"})</p>

<p>@Html.ActionLink("Home", "Index", "Home", null, new { @class = "btn btn-success btn-sm"})</p>