@{
  Layout = "_Layout";
}

@using Library.Models;
@model List<Library.Models.Genre>;

<h1>Genres</h1>

@if (@Model.Count == 0)
{
  <h3>No Genres have been added yet!</h3>
} 

@foreach (Genre genre in Model)
{
  <li>@Html.ActionLink($"{genre.GenreName}", "Details", new { id = genre.GenreId })</li>
}

<p>@Html.ActionLink("Add new genre", "Create", null, null, new { @class = "btn btn-success btn-sm"})</p>

<p>@Html.ActionLink("Home", "Index", "Home", null, new { @class = "btn btn-success btn-sm"})</p>