@{
  Layout = "_Layout";
}

@model Library.Models.Patron

<h2>Add a copy</h2>

<h4>Add a copy: @Html.DisplayFor(model => model.PatronFirstName)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.PatronId)

    @Html.Label("Select Copy")
    @Html.DropDownList("CopyId")

    <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to list", "Index", null, null, new { @class = "btn btn-success btn-sm"})</p>