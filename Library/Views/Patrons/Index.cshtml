@{
  Layout = "_Layout";
}

@using Library.Models;
@model List<Library.Models.Patron>;

<h1>Patrons</h1>

@if (@Model.Count == 0)
{
  <h3>No patrons have been added yet!</h3>
} 

@foreach (Patron patron in Model)
{
  <li>@Html.ActionLink($"{patron.PatronFirstName} | {patron.PatronLastName}", "Details", new { id = patron.PatronId })</li>
}

<p>@Html.ActionLink("Add a new Patron", "Create",null, new { @class = "btn btn-success btn-sm"})</p>

<p>@Html.ActionLink("Home", "Index", "Home", null, new { @class = "btn btn-success btn-sm"})</p>